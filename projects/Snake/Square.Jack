class Square {
    static int col, row; // location of top left corner
    static int size;

    function void init(int Ax, int Ay, int Asize) {
        let col = Ax;
        let row = Ay;
        let size = Asize;
        return;
    }

    function void draw(bool color) {
        do Screen.setColor(color);
        do Screen.drawRectangle(col, row, col + size, row + size);
        return;
    }
}
